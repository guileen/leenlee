extends ../layout

block main
  // .post-wrapper.no-reply
  .post-wrapper
    .post
      h2= topic.title
      p= topic.content
    - for reply in replies
      .post
        p= reply.content

    form#reply-form(action='/topic/reply/#{topic.id}', method='post')
      .control-group
        label.control-label(for='Reply_content') 回复
        .controls
          textarea(id='Reply_content', name='Reply[content]')

      .form-actions
        button.btn.btn-primary(type='submit') 提交
